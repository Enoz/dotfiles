theme = enozian

# Splits

keybind = ctrl+shift+plus>ctrl+shift+j=new_split:down
keybind = ctrl+shift+plus>ctrl+shift+k=new_split:up
keybind = ctrl+shift+plus>ctrl+shift+h=new_split:left
keybind = ctrl+shift+plus>ctrl+shift+l=new_split:right

keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top


keybind = ctrl+left=resize_split:left,30
keybind = ctrl+right=resize_split:right,30
keybind = ctrl+up=resize_split:up,30
keybind = ctrl+down=resize_split:down,30

# Tabs

keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab

# Misc

keybind = ctrl+shift+-=close_surface
keybind = global:f11=toggle_fullscreen

# Unbind
keybind = ctrl+enter=unbind

# Options

resize-overlay-duration=0s
macos-titlebar-style=tabs
auto-update=off
unfocused-split-opacity=0.85
clipboard-read=allow
clipboard-write=allow
clipboard-paste-protection=false
